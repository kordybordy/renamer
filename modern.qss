* {
    font-family: '{{font_family}}';
    color: {{text_primary}};
}

*:focus {
    outline: none;
}

QMainWindow, QWidget {
    background-color: qlineargradient(x1:0, y1:0, x2:1, y2:1, stop:0 {{window_gradient_start}}, stop:1 {{window_gradient_end}});
}

QFrame#Sidebar {
    background-color: {{surface_sidebar}};
    border: 1px solid #1A2640;
    border-radius: 14px;
}

QFrame#SidebarBrand {
    background-color: #111A2D;
    border: 1px solid {{border_default}};
    border-radius: 10px;
}

QLabel#TitleLabel {
    font-size: 18px;
    font-weight: 700;
    color: #F2F6FF;
}

QLabel#Subtitle {
    color: #90A4CC;
    font-size: 11px;
}

QPushButton#SidebarButton {
    background-color: transparent;
    border: 1px solid transparent;
    border-radius: 10px;
    padding: 10px 12px;
    text-align: left;
    font-weight: 600;
    color: #B9C7E7;
}

QPushButton#SidebarButton:hover {
    background-color: #16233B;
    border-color: #273A5E;
    color: {{text_primary}};
}

QPushButton#SidebarButton:checked {
    background-color: #233559;
    border-color: #5475B8;
    color: #F2F6FF;
}

QPushButton#SidebarButton:disabled {
    color: #6F7D9E;
}

QFrame#TopBar, QFrame#ContentRoot {
    background-color: transparent;
}

QFrame#TopBar {
    border: 1px solid {{border_default}};
    border-radius: 12px;
    background-color: {{surface_panel}};
}

QLineEdit#TopSearch {
    background-color: #19243B;
    border: 1px solid #2B3C5D;
    border-radius: 9px;
    padding: 8px 10px;
}

QLineEdit, QComboBox, QListWidget, QTableWidget, QTextEdit, QPlainTextEdit, QSpinBox, QDoubleSpinBox {
    background-color: {{surface_input}};
    border: 1px solid {{border_input}};
    border-radius: 8px;
    padding: 7px;
    selection-background-color: {{accent_selection}};
    selection-color: {{text_on_selected}};
}

QLineEdit:focus, QComboBox:focus, QListWidget:focus, QTableWidget:focus, QTextEdit:focus, QPlainTextEdit:focus, QSpinBox:focus, QDoubleSpinBox:focus, QTabWidget:focus, QTableView:focus {
    border: 1px solid {{border_focus}};
    background-color: {{surface_input_focus}};
}

QPushButton:focus, QToolButton:focus, QCheckBox:focus, QComboBox:focus, QSpinBox:focus, QDoubleSpinBox:focus, QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus, QListWidget:focus, QTableWidget:focus, QTabBar::tab:focus {
    border: 1px solid {{border_focus}};
}

QTabBar::tab:focus {
    background-color: {{surface_tab_focus}};
}

QPushButton {
    background-color: #2A395B;
    border: 1px solid #445B88;
    color: #EDF3FF;
    border-radius: 9px;
    padding: 8px 12px;
    font-weight: 600;
}

QPushButton:hover {
    background-color: #334974;
}

QPushButton:pressed {
    background-color: #283D62;
}

QPushButton:disabled, QLineEdit:disabled, QComboBox:disabled {
    background-color: {{surface_disabled}};
    border-color: {{border_disabled}};
    color: {{text_disabled}};
}

QPushButton#PrimaryButton {
    background-color: #5B63FF;
    border-color: #7A80FF;
    color: #FFFFFF;
}

QPushButton#PrimaryButton:hover {
    background-color: #6B74FF;
}

QToolButton#TopBarIconButton {
    background-color: #1A2740;
    border: 1px solid #2B3E63;
    border-radius: 8px;
    padding: 4px 8px;
    color: #B6C6E8;
}

QToolButton#TopBarIconButton:hover {
    background-color: #223251;
}

QFrame#Card {
    background-color: {{surface_panel}};
    border: 1px solid {{border_default}};
    border-radius: 12px;
}

QWidget#CardBody {
    background: transparent;
    border: none;
}

QLabel#CardTitle {
    font-size: 13px;
    font-weight: 700;
    color: #DCE7FF;
    padding-bottom: 2px;
}

QHeaderView::section {
    background-color: {{surface_input}};
    border: none;
    border-bottom: 1px solid #2A3B5A;
    color: #95A6C8;
    font-weight: 600;
    padding: 8px;
}

QTableWidget {
    gridline-color: #1B2A44;
    alternate-background-color: #152238;
    selection-background-color: #3A5DA1;
    selection-color: #FFFFFF;
}

QTableWidget::item {
    padding: 8px;
    border: none;
}

QTableWidget::item:hover {
    background-color: #2A406A;
}

QTableWidget::item:selected {
    background-color: #3A5DA1;
    color: #FFFFFF;
}

QProgressBar {
    background-color: {{surface_input}};
    border: 1px solid {{border_input}};
    border-radius: 8px;
    text-align: center;
}

QProgressBar::chunk {
    background-color: #5E70FF;
    border-radius: 8px;
}

QStatusBar {
    background-color: #101A2D;
    border-top: 1px solid {{border_default}};
}

QScrollArea {
    border: none;
    background: transparent;
}

QCheckBox {
    spacing: 8px;
}

QCheckBox::indicator {
    width: 16px;
    height: 16px;
    border: 1px solid #51658E;
    border-radius: 4px;
    background: {{surface_input}};
}

QCheckBox::indicator:checked {
    background: #5E70FF;
    border-color: #7A88FF;
}

QToolButton#CollapsibleToggle {
    border: 1px solid {{border_input}};
    border-radius: 8px;
    background-color: #151F34;
    padding: 6px 10px;
    font-weight: 600;
    text-align: left;
}

QPlainTextEdit#StatusLog {
    background-color: #0D1422;
    border: 1px solid #243653;
    font-family: 'Consolas', 'Segoe UI Mono', monospace;
    color: #C8D9FF;
}
